<server description="UpdateCrewServiceServer">
    <featureManager>
        <!-- <feature>passwordUtilities-1.1</feature> -->
        <feature>cdi-4.0</feature>
        <feature>ssl-1.0</feature>
        <feature>mpConfig-3.0</feature>
        <feature>beanValidation-3.0</feature>	   
        <feature>restfulWS-3.1</feature>
        <feature>jsonb-3.0</feature>
        <feature>mpOpenAPI-3.1</feature>
        <feature>servlet-6.0</feature>
        <feature>pages-3.1</feature>
    </featureManager>

    <variable name="default.http.port" defaultValue="9080"/>
    <variable name="default.https.port" defaultValue="9443"/>
    <variable name="app.context.root" defaultValue="/UpdateCrewService"/>

    <httpEndpoint host="*" httpPort="${default.http.port}" httpsPort="${default.https.port}" id="defaultHttpEndpoint" />

    
     <webApplication contextRoot="${app.context.root}" location="UpdateCrewService.war" name="UpdateCrewService">
     </webApplication>
    

    <cors 
     domain="/UpdateCrewService" 
     allowedOrigins="*" 
     allowedMethods="OPTIONS, PUT, GET, DELETE, POST" 
     allowedHeaders="*" 
     allowCredentials="true" 
     maxAge="3600" />

</server>
